@model MNS_Reviews.Models.UserCreate
@{
    ViewData["Title"] = "Register";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <link rel="stylesheet" href="~/css/form.css" asp-append-version="true" />
    <title>Register</title>

</head>

<body>
    

    <form asp-controller="User" asp-action="Create" method="POST" enctype="multipart/form-data">

        <div class="form-row">
            <label for="name">Enter Your Nickname</label>
            <input name="name" id="name" type="text" required>
        </div>

        <div class="form-row">
            <label for="email">Enter Your Email</label>
            <input name="email" id="email" type="email" required>
        </div>

            <div class="form-row">
                <label asp-for="imgUrl" class="control-label">Profile Photo</label>
                <input asp-for="imgUrl" class="form-control" required/>
                <span asp-validation-for="imgUrl" class="text-danger"></span>
            </div>

        <div class="form-row">
            <label for="password">Enter Your Password</label>
            <input name="password" id="password" type="password" required>
        </div>

        <div class="form-row">
            <label for="password-validate">Enter Your Password Again</label>
            <input name="password-validate" id="password-validate" type="password" required>
        </div>
        <div class="form-row">
            <button type="submit">Register</button>
        </div>

    </form>



</body>

</html>