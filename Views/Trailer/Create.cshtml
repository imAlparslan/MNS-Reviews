@model MNS_Reviews.Models.Trailer

@{
    ViewData["Title"] = "Create Trailer";
}

<div class="post-create-header">
    <h1>Create Trailer</h1>
</div>



<hr />

        <form asp-action="Create" id=post-create-form>
            <div asp-validation-summary="ModelOnly"></div>

            <div class="form-row" id="post-create-form-row">
               <label asp-for="title" class="control-label">Title</label>
                <textarea asp-for="title" 
                class="form-control" 
                rows="5" cols="90"
                maxlength="210" minlength="5"> </textarea>
                 <span asp-validation-for="title" class="text-danger"></span>
            </div>
            <div class="form-row" id="post-create-form-row">
                <label asp-for="text" class="control-label">Text</label>
                <textarea asp-for="text" 
                class="form-control" 
                rows="10" cols="90"
                maxlength="8500" minlength="550"> </textarea>
               <span asp-validation-for="text" class="text-danger"></span>
            </div>
            <div class="form-row" id="post-create-form-row">
                <label asp-for="link" class="control-label"></label>
                <input asp-for="link" class="form-control" />
                <span asp-validation-for="text" class="text-danger"></span>
            </div>
 
            <div class="form-row" id="post-create-form-row">
                <button> create </button>
            </div>
        </form>



