@model MNS_Reviews.Models.MovieCreate

@{
    ViewData["Title"] = "Create Movie";
}

<div class="post-create-header">
    <h1>Create Movie</h1>
</div>
<hr />

        <form asp-action="Create" id="post-create-form" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-row" id="post-create-form-row">
                <label asp-for="director" class="control-label">Director(s)</label>
                <input asp-for="director" class="form-control" maxlength="85" required/>
                <span asp-validation-for="director" class="text-danger"></span>
            </div>
            <div class="form-row" id="post-create-form-row">
                <label asp-for="scenarist" class="control-label">Scenarist(s)</label>
                <input asp-for="scenarist" class="form-control" maxlength="85" required/>
                <span asp-validation-for="scenarist" class="text-danger"></span>
            </div>
            <div class="form-row" id="post-create-form-row">
                <label asp-for="actors" class="control-label">Actors</label>
                <input asp-for="actors" class="form-control" maxlength="85" required/>
                <span asp-validation-for="actors" class="text-danger"></span>
            </div>
            <div class="form-row" id="post-create-form-row">
                <label asp-for="duration" class="control-label">Duration</label>
                <input asp-for="duration" class="form-control" required/>
                <span asp-validation-for="duration" class="text-danger"></span>
            </div>
            <div class="form-row" id="post-create-form-row">
                <label asp-for="releaseDate" class="control-label">Relase Date</label>
                <input asp-for="releaseDate" class="form-control" required/>
                <span asp-validation-for="releaseDate" class="text-danger"></span>
            </div>


            <div class="form-row" id="post-create-form-row">
                <label asp-for="imgUrl" class="control-label">Img Path</label>
                <input asp-for="imgUrl" class="form-control" required/>
                <span asp-validation-for="imgUrl" class="text-danger"></span>
            </div>


            <div class="form-row" id="post-create-form-row">
                <label asp-for="title" class="control-label">Title</label>
                <textarea asp-for="title" 
                class="form-control" 
                rows="5" cols="90"
                maxlength="210" minlength="5"> </textarea>
                <span asp-validation-for="title" class="text-danger"></span>
            </div>
              <div class="form-row" id="post-create-form-row">
                 <label asp-for="text" class="control-label">Text</label>
                <textarea asp-for="text" 
                class="form-control" 
                rows="10" cols="90"
                maxlength="8500" minlength="550"> </textarea>
                <span asp-validation-for="text" class="text-danger"></span>
    </div>

            <div class="form-row" id="post-create-form-row">
                <button> create </button>
            </div>
        </form>


